import pandas as pd
import matplotlib.pyplot as plt
import folium
from folium.plugins import HeatMap

acc = pd.read_csv('data/accidents_sample.csv', parse_dates=['DateTime'])
acc['Hour'] = acc['DateTime'].dt.hour
acc['Date'] = acc['DateTime'].dt.date

# EDA - accidents by hour
hourly = acc.groupby('Hour').size()
hourly.plot(kind='bar', figsize=(10,4))
plt.title('Accidents by Hour')
plt.xlabel('Hour of day')
plt.ylabel('Number of accidents')
plt.tight_layout()
plt.show()

# Hotspot heatmap (folium)
map_center = [acc['Latitude'].mean(), acc['Longitude'].mean()]
m = folium.Map(location=map_center, zoom_start=12)
heat_data = acc[['Latitude','Longitude']].values.tolist()
HeatMap(heat_data, radius=10).add_to(m)
m.save('maps/accident_heatmap.html')
